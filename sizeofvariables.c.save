 #include<stdio.h>

int main()
{
  int a = 545;
 char b = 'c';
 float d = 1.23;
 double e = 1.34234;

  // print value and size of an int variable
  printf("int a value: %d and size: %lu bytes\n", a, sizeof(a));
  printf("char b value: %d and size: %lu bytes\n", b, sizeof(b));
  printf("float d value: %d and size: %lu bytes\n",  d, sizeof(d));
  printf("double e value: %d and size: %lu bytes\n", e, sizeof(e));

}

